{
  "extends": ["tslint:recommended"],
  "rules": {
    "object-literal-shorthand": false,
    "no-useless-cast": false,
    "object-literal-sort-keys": false,
    "arrow-parens": false,
    "prefer-for-of": false,
    "prefer-optional": false,
    "one-line": false,
    "no-bitwise": false,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace",
      "log",
      "error"
    ],
    "no-invalid-this": true,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "variable-name": false
  },
  "linterOptions": {
    "exclude": ["tests"]
  }
}
